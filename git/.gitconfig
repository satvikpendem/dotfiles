[user]
  email = satvik.pendem@gmail.com
  name = Satvik Pendem

[init]
  defaultBranch = main

[push]
	default = matching
  autoSetupRemote = true

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false

[delta]
  navigate = true
  line-numbers = true
  side-by-side = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[credential]
	helper = store
