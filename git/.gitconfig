[user]
  name = Satvik Pendem
  email = satvik.pendem@gmail.com

[init]
  defaultBranch = main

[push]
  default = simple
  autoSetupRemote = true

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false

[delta]
  navigate = true
  line-numbers = true
  side-by-side = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[credential]
  helper = store

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
